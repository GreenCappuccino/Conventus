<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Clubs</h1>
                <h8><i>that you are a part of</i></h8>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Clubs</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        {{#if @adminUser}}
            <div class="card card-danger">
                <div class="card-header">
                    <h6 class="m-0">Create Club</h6>
                </div>
                <form action="/addClub" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="clubname">Club Name</label>
                            <input name="clubname" type="text" class="form-control" id="clubname">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" rows="5" id="description"></textarea>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-danger" type="submit">Create</button>
                    </div>
                </form>
            </div>
        {{/if}}
        <div class="row">
            {{#each @clubs}}
                <div class="col-sm-3">
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title m-0">{{this.clubname}}</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <h5>Description</h5>
                            {{this.description}}
                            <br>
                            <strong>Membership Level {{this.level}}</strong>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a class="btn btn-success" href="/club?id={{this.snowflake}}">Details</a>
                            <a class="btn btn-warning" href="/leaveClub?id={{this.snowflake}}">Leave Club</a>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
            {{/each}}

        </div>
    </div>
</section>
