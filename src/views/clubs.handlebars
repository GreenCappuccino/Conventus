<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Clubs</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Clubs</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            {{#each @clubs}}
                <div class="col-sm-3">
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title m-0">{{this.clubname}}</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <h5>Description</h5>
                            {{this.description}}
                            <br>
                            <strong>Membership Level {{this.level}}</strong>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a class="btn btn-success" href="/club?id={{this.snowflake}}">Details</a>
                            <a class="btn btn-warning" href="/leaveClub?id={{this.snowflake}}">Leave Club</a>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
            {{/each}}

        </div>
    </div>
</section>
