<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Your Stream</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Stream</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h6 style="margin: 0">Create Post</h6>
            </div>
            <form action="/addSelfPost" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input name="title" type="text" class="form-control" id="title" placeholder="What I did today!">
                    </div>
                    <div class="form-group">
                        <label for="content">Content</label>
                        <textarea name="content" class="form-control" rows="5" id="content"></textarea>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary" type="submit">Post</button>
                </div>
            </form>
        </div>
        <!-- Main node for this component -->
        <div class="timeline">
            {{#each @posts}}
                <div>
                    <!-- Before each timeline item corresponds to one icon on the left scale -->
                    <i class="fas fa-stream bg-blue"></i>
                    <!-- Timeline item -->
                    <div class="timeline-item">
                        <!-- Time -->
                        <span class="time"><i class="fas fa-clock"></i>
                            <time class="timeago" datetime="{{this.timeISO}}">{{this.timeString}}</time>
                        </span>
                        <!-- Header. Optional -->
                        <h3 class="timeline-header"><a href="#">{{@username}}</a> created a post</h3>
                        <!-- Body -->
                        <div class="timeline-body">
                            <h5>{{this.title}}</h5>
                            {{this.content}}
                        </div>
                        <!-- Placement of additional controls. Optional -->
                        <div class="timeline-footer">
                            <a href="/delSelfPost?snowflake={{this.snowflake}}" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            {{/each}}
            <!-- The last icon means the story is complete -->
            <div>
                <i class="fas fa-clock bg-gray"></i>
            </div>
        </div>
    </div>
</section>
