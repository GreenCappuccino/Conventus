<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>User</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">User</li>
                    <li class="breadcrumb-item active">{{@user.username}}</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <div class="card card-widget widget-user-2">
                    <!-- Add the bg color to the header using any of the bg-* classes -->
                    <div class="widget-user-header bg-warning">
                        <div class="widget-user-image">
                            <img class="img-circle elevation-2" src="{{@user.avatar}}" alt="User Avatar">
                        </div>
                        <h3 class="widget-user-username" >{{@user.username}}</h3>
                        <h5 class="widget-user-desc" >Student</h5>
                    </div>
                    <div class="card-footer p-0">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <p class="nav-link m-0">
                                    Username <span class="float-right">{{@user.username}}</span>
                                </p>
                            </li>
                            <li class="nav-item">
                                <p class="nav-link m-0">
                                    Given Name <span class="float-right">{{@user.display}}</span>
                                </p>
                            </li>
                            <li class="nav-item">
                                <p class="nav-link m-0">
                                    Account Provider <span class="float-right">{{@user.provider}}</span>
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <!-- Main node for this component -->
                <div class="timeline">
                    {{#each @posts}}
                        <div>
                            <!-- Before each timeline item corresponds to one icon on the left scale -->
                            <i class="fas fa-stream bg-blue"></i>
                            <!-- Timeline item -->
                            <div class="timeline-item">
                                <!-- Time -->
                                <span class="time"><i class="fas fa-clock"></i>
                            <time class="timeago" datetime="{{this.timeISO}}">{{this.timeString}}</time>
                        </span>
                                <!-- Header. Optional -->
                                <h3 class="timeline-header"><a href="/user?id={{this.author.user_id}}">{{this.author.username}}</a> created a post</h3>
                                <!-- Body -->
                                <div class="timeline-body">
                                    <h5>{{this.title}}</h5>
                                    {{this.content}}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                    <!-- The last icon means the story is complete -->
                    <div>
                        <i class="fas fa-clock bg-gray"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
